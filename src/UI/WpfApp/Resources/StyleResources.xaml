<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="selectChecksumAlgoritmStyle">
        <Setter Property="Control.Margin" Value="0 30 0 15" />
    </Style>
    <Style x:Name="buttonStyle" TargetType="{x:Type Button}">
        <Setter Property="Padding" Value="10 10 10 10"></Setter>
        <Setter Property="Margin" Value="10 10 50 10"></Setter>
    </Style>
    <Style x:Name="radioButtonStyle" TargetType="{x:Type RadioButton}">
        <Setter Property="Margin" Value="5 0 0 0" />
    </Style>
    <Style x:Name="lableStyle" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="15" />
    </Style>
    <Style x:Key="m3">
        <Setter Property="Control.Margin" Value="3" />
    </Style>
    <Style x:Key="m5">
        <Setter Property="Control.Margin" Value="5" />
    </Style>
</ResourceDictionary>